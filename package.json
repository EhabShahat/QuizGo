{
  "name": "quizgo",
  "version": "1.0.0",
  "description": "Interactive quiz platform with dual-screen gameplay",
  "main": "server/src/server.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "client:dev": "cd client && npm start",
    "server:dev": "cd server && npm run dev",
    "build": "echo 'Server build - no build step needed'",
    "start": "cd server && npm start",
    "test": "npm run server:test",
    "client:test": "cd client && npm test",
    "server:test": "cd server && npm test",
    "client:build": "cd client && npm run build"
  },
  "keywords": ["quiz", "game", "education", "real-time", "multiplayer"],
  "author": "QuizGo Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}